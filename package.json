{
  "name": "stopwatchapp",
  "version": "1.0.0",
  "description": "![Vanilla JavaScript stopwatch project](./image/Vanilla-JavaScript-stopwatch-project.png)",
  "main": "index.js",
  "scripts": {
    "start": "run-p watch watch:styles",
    "build": "run-s clean clean:styles build:styles copy",
    "deploy": "run-s build publish",
    "build:styles": "sass src/scss:src/styles",
    "watch": "live-server src",
    "watch:styles": "sass src/scss:src/styles --watch",
    "clean": "rm -rf dist",
    "clean:styles": "rm -rf src/styles",
    "copy": "mkdir dist && rsync -avr --exclude=\"/scss\" src/ dist",
    "publish": "gh-pages -d dist"
  },
  "keywords": [],
  "author": "Iulian Stan",
  "license": "ISC",
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iulianSta/stopwatch.git"
  },
  "bugs": {
    "url": "https://github.com/iulianSta/stopwatch/issues"
  },
  "homepage": "https://github.com/iulianSta/stopwatch#readme"
}
